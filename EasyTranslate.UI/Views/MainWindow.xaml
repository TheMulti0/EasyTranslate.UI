<Window x:Class="EasyTranslate.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xezControls="clr-namespace:XeZrunner.UI.Controls;assembly=XeZrunner.UI"
        xmlns:xezButtons="clr-namespace:XeZrunner.UI.Controls.Buttons;assembly=XeZrunner.UI"
        xmlns:viewModels="clr-namespace:EasyTranslate.UI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <HierarchicalDataTemplate x:Key="SuggestionsTemplate" 
                                  DataType="viewModels:Suggestion" 
                                  ItemsSource="{Binding Items}">
            <Grid>
                <TextBlock Text="{Binding Title}" />
                <Button>Hi</Button></Grid>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Border Padding="15">
        <StackPanel>

            <ComboBox ItemsSource="{Binding Languages}"
                      SelectedItem="{Binding Language}"
                      Width="100" />

            <StackPanel Orientation="Horizontal" Margin="1"
                        Background="White"
                        Width="400" Height="125">

                <StackPanel.Effect>
                    <DropShadowEffect Opacity="0.13" BlurRadius="12" ShadowDepth="6" Direction="-45" />
                </StackPanel.Effect>

                <Border Width="200" Padding="20">
                    <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBoxBase_OnTextChanged" />
                </Border>
                
                <Border Background="Aquamarine" Width="200" Padding="20">
                    <Grid>
                        <TextBlock Text="{Binding Result}" Width="200" />
                        <xezControls:ArcProgress IsActive="{Binding IsLoading}" Visibility="{Binding ProgressVisibility}" />
                        
                    </Grid>
                </Border>
                
            </StackPanel>
<TreeView ItemTemplate="{StaticResource SuggestionsTemplate}" />
        </StackPanel>
        <!--<StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Width="100" TextChanged="TextBoxBase_OnTextChanged" />
            <ComboBox ItemsSource="{Binding Languages}"
                      SelectedItem="{Binding Language}"
                      Width="100" />
            <TextBlock Text="{Binding Result}" Width="100" />
        </StackPanel>-->
    </Border>

</Window>

